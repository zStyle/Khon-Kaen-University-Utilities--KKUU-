<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_marginTop="50dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/new1" android:id="@+id/Button_news" android:background="#000000" android:layout_marginLeft="20dip"></ImageButton>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView1" android:src="@drawable/front1" android:background="#000000"></ImageButton>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_marginTop="20dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/information" android:id="@+id/Button_infor" android:background="#000000" android:layout_marginLeft="20dip"></ImageButton>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView2" android:src="@drawable/front2" android:layout_marginRight="5dip" android:background="#000000"></ImageButton>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_marginTop="20dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/find1" android:id="@+id/Button_find" android:background="#000000" android:layout_marginLeft="20dip"></ImageButton>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView3" android:src="@drawable/front3" android:background="#000000"></ImageButton>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout4" android:layout_height="wrap_content" android:layout_marginTop="20dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/system1" android:id="@+id/Button_system" android:background="#000000" android:layout_marginLeft="20dip"></ImageButton>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView4" android:src="@drawable/front4" android:layout_marginLeft="22dip" android:background="#000000"></ImageButton>
    </LinearLayout>
    
</LinearLayout>
